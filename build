#!/bin/bash

cur_dir=$(pwd)

ln -sf "$cur_dir/rc_files/vimrc" ~/.vimrc
ln -sf "$cur_dir/rc_files/bashrc" ~/.bashrc
ln -sf "$cur_dir/rc_files/zshrc" ~/.zshrc
ln -sf "$cur_dir/rc_files/tmux.conf" ~/.tmux.conf

mkdir -p ~/.config/nvim 
ln -sf "$cur_dir/rc_files/nvim_init.lua" ~/.config/nvim/init.lua

mkdir -p ~/.config/nvim/lua
ln -sf "$cur_dir/lua/nvim-lspconfig.lua" ~/.config/nvim/lua/nvim-lspconfig.lua
ln -sf "$cur_dir/lua/treesitter.lua" ~/.config/nvim/lua/treesitter.lua
ln -sf "$cur_dir/lua/nvim-cmp.lua" ~/.config/nvim/lua/nvim-cmp.lua

if [ ! -d "$HOME/.local/bin" ]; then
	mkdir "$HOME/.local/bin"
fi

if [ ! -d "$HOME/.local/bin/scripts" ]; then
	mkdir "$HOME/.local/bin/scripts"
fi

mkdir -p ~/.vim/undodir

ln -sf "$cur_dir/scripts/duck" "$HOME/.local/bin/scripts/duck"
ln -sf "$cur_dir/scripts/gpg_signed" "$HOME/.local/bin/scripts/gpg_signed"

#### plugins check
nvim_dir="$HOME/.local/share/nvim/site/autoload"
if [ ! -d "$nvim_dir" ]; then
    mkdir -p "$nvim_dir"
fi
if [ ! -f "$nvim_dir/plug.vim" ]; then
    read -r -p "Install vim-plug? [y/n] " response
    if [[ "$response" =~ ^([yY])$ ]]; then
        curl "https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim" \
            -o "$nvim_dir/plug.vim"
        nvim -es -u init.vim -i NONE -c "PlugInstall" -c "qa"
    fi
fi

mkdir -p ~/.oh-my-zsh/custom/plugins/bashmarks
ln -sf "$cur_dir/plugins/bashmarks.plugin.sh" \
    ~/.oh-my-zsh/custom/plugins/bashmarks/bashmarks.plugin.zsh
